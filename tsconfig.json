{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "module": "commonjs",
    "paths": {
      "@/components/*": [ "view/components/*" ],
      "@/constants/*": [ "constants/*" ],
      "@/containers/*": [ "view/containers/*" ],
      "@/helpers/*": [ "helpers/*" ],
      "@/types/*": [ "types/*" ],
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "types": ["jest"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
